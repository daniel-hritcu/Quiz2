<Window x:Class="Q2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Q2"
        mc:Ignorable="d"
        Title="MainWindow" Height="255" Width="235">
    <Grid Margin="5,5,5,5">
        <Calendar x:Name="calendar" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="196" Height="170" SelectedDatesChanged="calendarDate_Selected"/>
        <Button x:Name="showDateButton" Content="Show" HorizontalAlignment="Left" Margin="70,185,0,0" VerticalAlignment="Top" Width="75" Click="showDateButton_Click"/>

    </Grid>
</Window>
